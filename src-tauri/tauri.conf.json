{
  "productName": "mira-launcher",
  "version": "0.1.0",
  "identifier": "com.miralauncher.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Mira Launcher",
        "width": 900,
        "height": 650,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "fullscreen": false,
        "shadow": true,
        "transparent": false,
        "visible": true,
        "center": true,
        "skipTaskbar": false
      }
    ],
    "security": {
    "csp": null,
    "assetProtocol": {
      "enable": true,
      "scope": {
        "requireLiteralLeadingDot": false,
        "allow": ["**/*"]
      }
    }
  },
    "withGlobalTauri": true,
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Copyright © 2025 Mira Launcher Team",
    "shortDescription": "輕量化應用啟動器",
    "longDescription": "一個功能強大且輕量化的應用啟動器，支援快速啟動應用程式、插件系統和自訂快捷鍵",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [],
    "resources": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "zh-CN"
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "cli": {
      "description": "Mira Launcher - A modern application launcher",
      "longDescription": "Mira Launcher is a modern, customizable application launcher built with Tauri",
      "beforeHelp": "Welcome to Mira Launcher",
      "afterHelp": "Visit https://github.com/hunmer/mira_launcher for more information",
      "args": [],
      "subcommands": {}
    },
    "updater": {
      "active": false,
      "endpoints": [],
      "dialog": true,
      "pubkey": ""
    }
  }
}