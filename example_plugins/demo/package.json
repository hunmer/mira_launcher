{
  "name": "@mira/demo-plugin",
  "version": "1.0.0",
  "description": "展示 Mira Launcher 插件系统各项能力的综合示例",
  "main": "index.ts",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "build": "vite build --mode production",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "preview": "vite preview"
  },
  "keywords": [
    "mira-launcher",
    "plugin",
    "demo",
    "example",
    "showcase",
    "vue3",
    "typescript"
  ],
  "author": "Mira Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hunmer/mira_launcher.git",
    "directory": "example_plugins/demo"
  },
  "bugs": {
    "url": "https://github.com/hunmer/mira_launcher/issues"
  },
  "homepage": "https://github.com/hunmer/mira_launcher#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "peerDependencies": {
    "vue": "^3.0.0",
    "@mira/plugin-api": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vue-tsc": "^1.0.0"
  },
  "files": [
    "index.ts",
    "metadata.json",
    "config.json",
    "types.ts",
    "components/",
    "styles/",
    "assets/",
    "README.md"
  ],
  "mira": {
    "pluginVersion": "1.0.0",
    "apiVersion": "1.0.0",
    "categories": ["development", "example"],
    "tags": ["demo", "showcase", "api", "tutorial"],
    "permissions": [
      "storage",
      "notifications",
      "menu",
      "shortcuts",
      "theme",
      "pages",
      "grid"
    ],
    "compatibility": {
      "mira": ">=1.0.0",
      "node": ">=16.0.0"
    },
    "entry": "./index.ts",
    "metadata": "./metadata.json",
    "config": "./config.json",
    "types": "./types.ts",
    "assets": "./assets/",
    "styles": "./styles/main.css"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
