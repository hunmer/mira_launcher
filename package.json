{
    "name": "mira-launcher",
    "version": "1.0.0",
    "description": "輕量化應用啟動器 - A lightweight application launcher with plugin system",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "preview": "vite preview",
        "tauri": "tauri",
        "tauri:dev": "tauri dev",
        "tauri:build": "tauri build",
        "tauri:portable": "tauri build --bundles nsis",
        "tauri:clean": "rimraf src-tauri/target",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "format": "prettier --write src/",
        "test": "vitest",
        "type-check": "vue-tsc --noEmit",
        "clean": "rimraf dist && rimraf node_modules/.vite",
        "server": "cd server && npm start",
        "server:dev": "cd server && npm run dev",
        "server:install": "cd server && npm install",
        "dev:full": "./start-dev.sh"
    },
    "dependencies": {
        "@floating-ui/vue": "^1.0.2",
        "@primevue/themes": "^4.3.0",
        "@tauri-apps/api": "^2.0.0",
        "@tauri-apps/plugin-dialog": "^2.3.2",
        "@tauri-apps/plugin-fs": "^2.4.1",
        "@tauri-apps/plugin-global-shortcut": "^2.3.0",
        "@tauri-apps/plugin-notification": "^2.3.0",
        "@tauri-apps/plugin-os": "^2.3.0",
        "@tauri-apps/plugin-shell": "^2.3.0",
        "@vueuse/core": "^10.7.0",
        "lucide-vue-next": "^0.294.0",
        "node-downloader-helper": "^2.1.9",
        "pinia": "^2.1.7",
        "primeicons": "^7.0.0",
        "primevue": "^4.3.0",
        "queue": "^7.0.0",
        "vue": "^3.4.0",
        "vue-router": "^4.5.1",
        "vue3-smooth-dnd": "^0.0.6",
        "vuedraggable": "^4.1.0"
    },
    "devDependencies": {
        "@tauri-apps/cli": "^2.7.1",
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitejs/plugin-vue": "^5.0.0",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/eslint-config-typescript": "^12.0.0",
        "@vue/tsconfig": "^0.5.0",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.56.0",
        "eslint-plugin-vitest": "^0.5.4",
        "eslint-plugin-vue": "^9.19.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "postcss": "^8.4.32",
        "prettier": "^3.1.1",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "vitest": "^1.1.0",
        "vue-tsc": "^2.0.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    }
}
